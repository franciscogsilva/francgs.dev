---
import "../styles/global.css";

import "@fontsource-variable/onest";

import { ViewTransitions } from "astro:transitions";
import Background from "../components/Background.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
  description: string;
  isLinks?: boolean;
}

const { title, description, isLinks } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <script
      async
      src="https://us.umami.is/script.js"
      data-website-id="f2869995-c81f-476f-85d8-ef8516b023d6"></script>
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <!-- #1A1B26 -->
  <body class="w-full">
    <!-- dark:bg-gray-950 -->
    <Background>
      <section
        class=`${!isLinks ? "main-section" : "links-main-section"} dark:text-white mx-auto max-w-3xl px-4 sm:px-6 xl:max-w-5xl xl:px-0`
      >
        {!isLinks && <Header />}
        <main
          class=`${!isLinks ? "mb-auto" : ""} divide-y divide-gray-200 dark:divide-gray-700`
        >
          <slot />
        </main>
        {!isLinks && <Footer />}
      </section>
    </Background>
  </body>
</html>
