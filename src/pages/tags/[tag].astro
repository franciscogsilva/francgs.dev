export const prerender = false;

const { tag } = Astro.params;
if (!tag) {
  return Astro.redirect("/", 302);
}

const cookieLang = Astro.cookies.get("site_lang")?.value;
if (cookieLang === "es") {
  return Astro.redirect(`/es/tags/${tag}/`, 302);
}

return Astro.redirect(`/en/tags/${tag}/`, 302);
