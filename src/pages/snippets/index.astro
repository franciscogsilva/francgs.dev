---
import type { MarkdownInstance } from "astro";
import PageHeader from "../../components/PageHeader.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";

const snippets = Object.values(
  import.meta.glob<MarkdownInstance<any>>("../../pages/snippets/*.md", {
    eager: true,
  }),
);

const title = "Snippets";
const description = "Snippets";
---

<BaseLayout title={title} description={description}>
  <PageHeader title={title} />
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
    {
      snippets
        .reverse()
        .map((snippet) => (
          <PostCard
            pubDate={snippet.frontmatter.pubDate}
            url={snippet.url}
            title={snippet.frontmatter.title}
            tags={snippet.frontmatter.tags}
            description={snippet.frontmatter.description}
          />
        ))
    }
  </div>
</BaseLayout>
