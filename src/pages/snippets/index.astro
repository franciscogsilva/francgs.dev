---
import PageHeader from "../../components/PageHeader.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";

const snippets = await Astro.glob("../../pages/snippets/*.md");

const title = "Snippets";
const description = "Snippets";
---

<BaseLayout title={title} description={description}>
  <PageHeader title={title} />
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
    {
      snippets
        .reverse()
        .map((snippet) => (
          <PostCard
            pubDate={snippet.frontmatter.pubDate}
            url={snippet.url}
            title={snippet.frontmatter.title}
            tags={snippet.frontmatter.tags}
            description={snippet.frontmatter.description}
          />
        ))
    }
  </div>
</BaseLayout>
