---
interface Props {
  title: string;
  description: string;
  image?: string;
  articleDate?: string;
  updatedDate?: string;
  lang?: string;
}

import siteData from "../data/site.json";

const { title, description, image, articleDate, updatedDate, lang = "en" } =
  Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Fallback to a real PNG instead of SVG (social platforms don't support SVG)
const socialImageURL = new URL(
  image || "/profile.webp",
  Astro.url
);

// Build breadcrumb from URL path
const pathSegments = Astro.url.pathname
  .split("/")
  .filter(Boolean);

const breadcrumbItems = [
  { name: "Home", url: new URL("/", Astro.site).toString() },
  ...pathSegments.map((segment, i) => ({
    name: segment.replace(/-/g, " ").replace(/^\d+-/, ""),
    url: new URL(
      "/" + pathSegments.slice(0, i + 1).join("/"),
      Astro.site
    ).toString(),
  })),
];

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: breadcrumbItems.map((item, i) => ({
    "@type": "ListItem",
    position: i + 1,
    name: item.name,
    item: item.url,
  })),
};

const authorSchema = {
  "@type": "Person",
  name: siteData.name,
  url: Astro.site?.toString(),
  sameAs: [
    "https://github.com/franciscogsilva",
    "https://linkedin.com/in/franciscogonzalezsilva",
    "https://www.x.com/francgs_",
  ],
};

const mainSchema = articleDate
  ? {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      headline: title,
      description: description,
      image: socialImageURL.toString(),
      url: canonicalURL.toString(),
      datePublished: articleDate,
      dateModified: updatedDate || articleDate,
      author: authorSchema,
      publisher: authorSchema,
      mainEntityOfPage: {
        "@type": "WebPage",
        "@id": canonicalURL.toString(),
      },
    }
  : {
      "@context": "https://schema.org",
      "@type": "WebSite",
      name: siteData.siteTitle,
      description: description,
      url: Astro.site?.toString(),
      author: authorSchema,
    };
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- RSS Autodiscovery -->
<link
  rel="alternate"
  type="application/rss+xml"
  title="Francisco Gonzalez | Blog"
  href={new URL("/rss.xml", Astro.site)}
/>

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={articleDate ? "article" : "website"} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />
<meta property="og:site_name" content={siteData.siteTitle} />
<meta property="og:locale" content={lang === "es" ? "es_CO" : "en_US"} />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@francgs_" />
<meta name="twitter:creator" content="@francgs_" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={socialImageURL} />

<!-- Article Date (if applicable) -->
{
  articleDate && (
    <>
      <meta property="article:published_time" content={articleDate} />
      <meta
        property="article:modified_time"
        content={updatedDate || articleDate}
      />
    </>
  )
}

<!-- JSON-LD Structured Data -->
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(mainSchema)}
/>
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(breadcrumbSchema)}
/>
