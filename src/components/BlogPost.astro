---
const { pubDate, url, title, tags, description } = Astro.props;

// Fecha de entrada
const fechaEntrada = new Date(pubDate);

// Formatear la fecha en el formato deseado
const fechaFormateada = fechaEntrada.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li class="py-5">
  <article class="flex flex-col space-y-2 xl:space-y-0">
    <dl>
      <dt class="sr-only">Published on</dt>
      <dd
        class="text-base font-medium leading-6 text-gray-500 dark:text-gray-400"
      >
        <time datetime={pubDate}>{fechaFormateada}</time>
      </dd>
    </dl>
    <div class="space-y-3">
      <div>
        <h2 class="text-2xl font-bold leading-8 tracking-tight">
          <a class="text-gray-900 dark:text-gray-100" href={url}>
            {title}
          </a>
        </h2>
        <div class="flex flex-wrap">
          {
            tags.map((tag: string) => (
              <a
                class="mr-3 text-sm font-medium uppercase text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
                href={`/tags/${tag}`}
              >
                {tag}
              </a>
            ))
          }
        </div>
      </div>
      <div class="prose max-w-none text-gray-500 dark:text-gray-400">
        {description}
      </div>
    </div>
  </article>
</li>
