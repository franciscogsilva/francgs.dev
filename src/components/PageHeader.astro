---
interface Props {
  title: string;
  emoji?: string;
}

const { title, emoji } = Astro.props;
---

<section class="pt-6 pb-8 space-y-2 md:space-y-5">
  <h1
    class="text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:leading-10 md:leading-14"
  >
    {title}
    <span role="img" aria-label="Hello"> {emoji}</span>
  </h1>
</section>
