---
interface Post {
  id: string;
  data: {
    title: string;
    description: string;
    tags: string[];
    category?: string;
    pubDate: Date;
  };
}

interface Props {
  currentId: string;
  currentTags: string[];
  currentCategory?: string;
  allPosts: Post[];
  maxPosts?: number;
}

const { currentId, currentTags, currentCategory, allPosts, maxPosts = 3 } =
  Astro.props;

/**
 * Score-based related posts algorithm:
 * - Same category: +3 points (SILO relevance)
 * - Each shared tag: +1 point
 * - Excludes current post
 * - Sorted by score desc, then date desc
 */
const relatedPosts = allPosts
  .filter((post) => post.id !== currentId)
  .map((post) => {
    let score = 0;

    // Category match (strongest signal for SILO)
    if (currentCategory && post.data.category === currentCategory) {
      score += 3;
    }

    // Shared tags
    const sharedTags = post.data.tags.filter((tag) =>
      currentTags.includes(tag)
    );
    score += sharedTags.length;

    return { post, score };
  })
  .filter(({ score }) => score > 0)
  .sort((a, b) => {
    if (b.score !== a.score) return b.score - a.score;
    return b.post.data.pubDate.getTime() - a.post.data.pubDate.getTime();
  })
  .slice(0, maxPosts)
  .map(({ post }) => post);
---

{
  relatedPosts.length > 0 && (
    <div class="related-posts">
      <h3 class="related-title">Related Articles</h3>
      <div class="related-grid">
        {relatedPosts.map((post) => (
          <a href={`/blog/${post.id}`} class="related-card group">
            <span class="related-card-title group-hover:text-secondary transition-colors">
              {post.data.title}
            </span>
            <span class="related-card-desc">{post.data.description}</span>
            <div class="related-card-tags">
              {post.data.tags.slice(0, 2).map((tag) => (
                <span class="related-tag">{tag}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  )
}

<style>
  .related-posts {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .related-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }

  .related-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.75rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .related-card:hover {
    background: rgba(189, 138, 252, 0.08);
    border-color: rgba(189, 138, 252, 0.3);
    transform: translateY(-2px);
  }

  .related-card-title {
    font-size: 0.95rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
  }

  .related-card-desc {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .related-card-tags {
    display: flex;
    gap: 0.375rem;
    margin-top: 0.25rem;
  }

  .related-tag {
    font-size: 0.65rem;
    padding: 0.15rem 0.5rem;
    border-radius: 9999px;
    background: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>
